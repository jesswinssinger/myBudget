<%= form_for @goal do |f| %>
    <%= f.text_field :goal, placeholder: "New Goal" %><br>
    <br>
    <%= f.label :amount %><br>
    <%= f.number_field :amount %><br>
    <br>
    <%= f.label :balance %><br>
    <%= f.number_field :balance %><br>
    <br>
    <%= f.label :notes %><br>
    <%= f.text_area :notes %><br>
    <br>
    <%= f.submit %>
<% end %>